#include <stdio.h>

int main() {
    int t1, t2, t3;
    
    // Зчитуємо три значення 
    printf("Введіть три значення: ");
    scanf("%d %d %d", &t1, &t2, &t3);
    
    // Обчислюємо загальний час, необхідний для з'їдання пирога
    float total_time = 1.0 / (1.0 / t1 + 1.0 / t2 + 1.0 / t3);
    
    // Виводимо результат з округленням до двох знаків після коми
    printf("Час, необхідний для з'їдання пирога: %.2f годин.\n", total_time);
    
    return 0;
}
