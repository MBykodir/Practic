#include <stdio.h>

int minSteps(int x, int y) {
    // Перевірка випадку, коли x = y, тоді не потрібно жодного кроку
    if (x == y) {
        return 0;
    }

    // Початкова довжина першого кроку
    int step = 1;
    // Змінна для підрахунку кількості кроків
    int count = 0;

    // Цикл, поки x не дорівнює y
    while (x != y) {
        // Якщо x менше y, збільшуємо його на довжину кроку і збільшуємо лічильник кроків
        if (x < y) {
            x += step;
            count++;
        }
        // Якщо x більше y, зменшуємо його на довжину кроку і збільшуємо лічильник кроків
        else {
            x -= step;
            count++;
        }

        // Змінюємо довжину кроку наступного кроку (за умовою)
        step = step * 2;
    }

    return count;
}

int main() {
    int x, y;
    
    printf("Введіть значення x: ");
    scanf("%d", &x);
    
    printf("Введіть значення y: ");
    scanf("%d", &y);

    int steps = minSteps(x, y);
    
    printf("Мінімальна кількість кроків: %d\n", steps);

    return 0;
}
